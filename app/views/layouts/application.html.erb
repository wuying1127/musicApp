<!DOCTYPE html>
<html>
  <head>
    <title>Musicapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <% if logged_in? %>
    <nav>
      <p>logged in as: <%= current_user.email %></p>
      <%= button_to "Sign out", session_url, method: :delete %>
    </nav>
  <% end %>

  <body>
    <%= yield %>
  </body>
</html>
